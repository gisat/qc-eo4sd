{
  "description": "Flood extent",
  "steps": [
    {
      "check_ident": "qc_tool.vector.unzip",
      "required": true
    },
    {
      "check_ident": "eo4sd.vector.naming_eo4sd",
      "required": true,
      "parameters": {
        "layer_regex": "^EO4SD_(?P<place>[a-zA-Z_]+)_FLOOD_(?P<year>[0-9]{4})$"
      }
    },
    {
      "check_ident": "qc_tool.vector.format",
      "required": true,
      "parameters": {
        "layers":["al"],
        "formats": [".shp"],
        "drivers": {".shp": "ESRI Shapefile"}
      }
    },
    {
      "check_ident": "eo4sd.vector.attribute",
      "required": true,
      "parameters": {
        "layers": ["al"],
        "attributes": {"ID": ["string", "numeric"],
                       "WATERTYPE": ["string"],
                       "WATERCODE": ["numeric"],
                       "AREA": ["numeric"]
                       }
      }
    },
    {
      "check_ident": "eo4sd.vector.projection",
      "required": true,
      "parameters": {
        "layers": ["al"],
        "epsg": {"DHAKA": 32646,
                 "KARACHI": 32642,
                 "BAMAKO": 32629,
                 "LIMA": 32718,
                 "MANDALAY": 32647,
                 "MWANZA": 32736,
                 "PHNOM_PENH": 32648,
                 "RAMADI_FALLUJAH": 32638
                }
      }
    },
    {
      "check_ident": "eo4sd.vector.import2pg",
      "required": true
    },
    {
      "check_ident": "qc_tool.vector.unique",
      "required": false,
      "parameters": {
        "layers": ["al"],
        "unique_keys": ["id"]
      }
    },
    {
      "check_ident": "qc_tool.vector.enum",
      "required": false,
      "parameters": {
        "layers": ["al"],
        "column_defs": [["watertype", ["Water body", "Flooded", "Non-flooded"]],
                        ["watercode", [0, 1, 2]]]
      }
    },
    {
      "check_ident": "qc_tool.vector.singlepart",
      "required": false,
      "parameters": {
        "layers": ["al"]
      }
    },
    {
      "check_ident": "qc_tool.vector.geometry",
      "required": false,
      "parameters": {
        "layers": ["al"]
      }
    },
    {
      "check_ident": "eo4sd.vector.overlap",
      "required": false,
      "parameters": {
        "layers": ["al"],
        "limit": 1
      }
    }
  ]
}
